<?xml version="1.0" encoding="utf-8"?>
<!-- Place this in res/layout/widget_habit.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_background"
    android:orientation="vertical"
    android:padding="8dp">

    <!-- Title -->
    <TextView
        android:id="@+id/tv_widget_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Daily Habits"
        android:textColor="#333333"
        android:textSize="14sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="4dp" />

    <!-- Progress Percentage -->
    <TextView
        android:id="@+id/tv_widget_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0%"
        android:textColor="#666666"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="4dp" />

    <!-- Progress Bar -->
    <ProgressBar
        android:id="@+id/progress_bar_widget"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_marginBottom="4dp"
        android:max="100"
        android:progress="0"
        android:progressTint="#4CAF50" />

    <!-- Completion Status -->
    <TextView
        android:id="@+id/tv_widget_completed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0/0 completed"
        android:textColor="#666666"
        android:textSize="12sp"
        android:gravity="center"
        android:layout_marginBottom="2dp" />

    <!-- Last Updated -->
    <TextView
        android:id="@+id/tv_widget_updated"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Updated: --:--"
        android:textColor="#999999"
        android:textSize="10sp"
        android:gravity="center" />

</LinearLayout>